<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="godChoicePane" prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.Client.GUI.InfoBoxController">
   <children>
      <ImageView fx:id="builderImage" disable="true" fitHeight="370.0" fitWidth="384.0" layoutX="230.0" layoutY="65.0"
                 pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/builder1.png"/>
         </image>
      </ImageView>
      <ImageView fx:id="godCard" disable="true" fitHeight="306.0" fitWidth="190.0" layoutX="117.0" layoutY="97.0"
                 pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/GodCards/1.png"/>
         </image>
      </ImageView>
      <Button fx:id="buttonForward" layoutX="523.0" layoutY="225.0" mnemonicParsing="false" onAction="#forward"
              prefHeight="50.0" prefWidth="50.0" text="&gt;"/>
      <Button fx:id="buttonBack" layoutX="25.0" layoutY="225.0" mnemonicParsing="false" onAction="#back"
              prefHeight="50.0" prefWidth="50.0" text="&lt;"/>
      <Button fx:id="closeButton" layoutX="174.0" layoutY="436.0" mnemonicParsing="false" onAction="#close"
              prefHeight="50.0" prefWidth="253.0" text="Close"/>
      <Text fx:id="playerName" disable="true" layoutX="173.0" layoutY="66.0" strokeType="OUTSIDE" strokeWidth="0.0"
            style="-fx-font-size: 30;" text="PlayerName" textAlignment="CENTER" wrappingWidth="253.0"/>
   </children>
</AnchorPane>
